{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  },
  "css.customData": [".vscode/tailwind.json"],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.classAttributes": [
    "class",
    "ui" // Nuxt UI needs this for Tailwind autocompletion
  ],
  "eslint.experimental.useFlatConfig": true,
  "eslint.workingDirectories": ["pwa"],
  "prettier.configPath": "pwa/prettier.config.cjs",
  "vitest.rootConfig": "pwa/vitest.config.ts",
  "nuxtr.defaultPackageManager": "NPM",
  "nuxtr.monorepoMode.DirectoryName": "pwa",
  "nuxtr.piniaFiles.defaultTemplate": "setup",
  "nuxtr.vueFiles.firstTag": "script",
  "nuxtr.vueFiles.style.addStyleTag": false,
  "nuxtr.vueFiles.style.alwaysScoped": true,
  "nuxtr.openItemsAfterCreation": true,
  "[php]": {
    "editor.defaultFormatter": "junstyle.php-cs-fixer"
  },
  "php.format.codeStyle": "Off", // PHP-CS-Fixer is used as a formatter
  "php.problems.exclude": {
    "vendor/": true
  },
  "php.problems.excludeGitIgnore": true,
  "composer.workingPath": "api",
  "php-cs-fixer.config": "api/.php-cs-fixer.dist.php",
  "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
  "phpstan.binPath": "api/vendor/bin/phpstan",
  "phpstan.configFile": "api/phpstan.dist.neon",
  "phpstan.checkValidity": true,
  "psalm.psalmScriptPath": "api/vendor/bin/psalm",
  "psalm.configPaths": ["api/psalm.xml", "api/psalm.xml.dist"],
  "psalm.unusedVariableDetection": true,
  "phpunit.command": "docker compose run --rm php bin/phpunit ${phpunitargs}"
}
